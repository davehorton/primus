<ps>
    <ps-logger max-log-file-size="40000" log-file-dir="logs" num-of-archive-files="40" archive-dir="logs/archive" />
    <ps-init>
        <process name="ps_logger_server" control-queue="PACTOLUS_ps_logger_server" run-offline="1" start-before-cluster="1" restart="1" critical="1" />
        <process name="ps_httpd" control-queue="PACTOLUS_ps_httpd" restart="1" critical="1" />
        <process name="ps_c_adaptor" control-queue="PACTOLUS_ps_c_adaptor" process-args="PACTOLUS_ps_c_adaptor" restart="1" critical="1" />
        <process name="ps_appexec" control-queue="PACTOLUS_ps_appexec" restart="1" critical="1" />
        <process name="ps_license_server" control-queue="PACTOLUS_ps_license_server" restart="1" critical="1" />
        <process name="ps_soap_agent" control-queue="PACTOLUS_ps_soap_agent" restart="1" critical="1" />
        <process name="ps_jvmserver" control-queue="PACTOLUS_ps_jvmserver" restart="1" critical="1" />
        <process name="ps_sip_agent" control-queue="PACTOLUS_ps_sip_agent" restart="1" critical="1" />
        <process name="ps_eventdispatcher" control-queue="PACTOLUS_ps_eventdispatcher" restart="1" critical="1" />
        <process name="ps_softms_pcs" control-queue="PACTOLUS_ps_softms_pcs" restart="1" critical="1" />

<!-- Start of comment.
     Uncomment this if you want to send mail or interact with IMAP servers.
     Note that the voicemail tutorial requires this feature to be turned on.
     In order to do so, however, you must specify the address of an smtp server
     in the ps-mail-agent section further down in this document.

        <process name="ps_mail_agent" control-queue="PACTOLUS_ps_mail_agent" restart="1" critical="1"/>

     End of comment. -->

    </ps-init>

    <console port="7575" endpoint-detail="always" local-ip-addr="10.201.170.81">
        <access-control>
            <access-entry host="0.0.0.0" wildcard="255.255.255.255" />
        </access-control>
    </console>

    <ps-httpd port="8000">
        <cache-rules>
            <revalidate suffix=".xml" />
            <revalidate suffix=".vxml" />
        </cache-rules>
    </ps-httpd>

    <ps-soap-agents />

<ps-appexec start-appserver-id="100" stop-appserver-id="110">
    <!-- Note: This app is just for testing the install.
               Once you have successfully installed the software, you can remove the following 3 lines -->
        <appserver id="100">
            <application sessions="125" iterations="0">inboundcalls.xml</application>
        </appserver>
        <appserver id="101">
            <application sessions="30" iterations="0">phoneadmin.xml</application>
        </appserver>
        <appserver id="102">
            <application sessions="1" iterations="0">monitor_colo.xml</application>
        </appserver>
	<appserver id="103">
            <application sessions="5" iterations="0">ivr555.xml</application>
        </appserver>
	<appserver id="104">
            <application sessions="1" iterations="0">tmg_monitor.xml</application>
        </appserver>
        <appserver id="105">
            <application sessions="1" iterations="0">monitor_callagents.xml</application>
        </appserver>

    </ps-appexec>

    <ps-sip-agent send-100-trying-for-invite="0" local-ip-addr="10.201.170.81" />

    <ps-mail-agent>
        <smtp server="enter smtp relay host here" connections="2" />
        <imap connections="2" />
    </ps-mail-agent>

<ps-routing-rules>
        <screen-lists>
                <list name="admin application numbers">
			<item>2005001000</item>
                        <item>2005001001</item>
                        <item>2005001002</item>
                        <item>2005001003</item>
                </list>
		<list name="ivr555 numbers">
			<item>4168555057</item>
                </list>
		<list name="tmg test numbers">
			<item>4168559515</item>
		</list>
        </screen-lists>
        <events>
                <event name="Pactolus.EveSessionRequest.1">
                        <parameter>msg</parameter>
                        <rule target="phoneadmin">
                                <![CDATA[msg.hdr.to screen "admin application numbers"]]>
                        </rule>
			<rule target="ivr555">
                                <![CDATA[msg.hdr.to screen "ivr555 numbers"]]>
                        </rule>
			<rule target="tmg_monitor">
				<![CDATA[msg.hdr.to screen "tmg test numbers"]]>
			</rule>
                        <rule target="inboundcalls">
                        <![CDATA[]]>
                        </rule>
                </event>
        </events>
</ps-routing-rules>

    <ps-jvm>
        <ps-jvm
	    class-path="/opt/pcs/java/pcs_mutables.jar"
	    jvm-start-size="-Xms16m"
	    jvm-max-size="-Xmx32m"
	    num-threads="4" />
    </ps-jvm>

    <ps-softms-pcs
        start-port="20000"
        codecs="PCMU"
        endpoint-idle-timer="300"
        default-prompt-file="media/eng/G.711-MuLaw/"
        default-codec="PCMU"
	inband-audio="1"
	partial-timeout="16000"
	first-digit-timeout="10000"
        telephone-event-payload-type="101"
        critical-timeout="4000"
        >
	<prompt language="eng" codec="PCMU">media/eng/G.711-MuLaw/</prompt>
        <prompt language="eng" codec="PCMA">media/eng/G.711-ALaw/</prompt>
        <prompt language="eng" codec="G729">media/eng/G.729/</prompt>
        <prompt language="fre" codec="PCMU">media/fre/G.711-MuLaw/</prompt>
        <prompt language="fre" codec="PCMA">media/fre/G.711-ALaw/</prompt>
        <prompt language="fre" codec="G729">media/fre/G.729/</prompt>
    </ps-softms-pcs>

    <pca-registry file="pca_registry.xml" />

    <!-- application-specific configuration information -->
    <application-properties></application-properties>
</ps>
